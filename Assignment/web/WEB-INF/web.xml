<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>Login</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/manage/HomePage</url-pattern>
        <url-pattern>/user/HomePage</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserHomePage</servlet-name>
        <servlet-class>controller.UserHomePageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminHomePageController</servlet-name>
        <servlet-class>controller.AdminHomePageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TeamsPageController</servlet-name>
        <servlet-class>controller.TeamsPageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TeamDetailsController</servlet-name>
        <servlet-class>controller.TeamDetailsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlayersPageController</servlet-name>
        <servlet-class>controller.PlayersPageController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserHomePage</servlet-name>
        <url-pattern>/user/HomePage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminHomePageController</servlet-name>
        <url-pattern>/manage/HomePage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TeamsPageController</servlet-name>
        <url-pattern>/manage/TeamsPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TeamDetailsController</servlet-name>
        <url-pattern>/manage/TeamDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlayersPageController</servlet-name>
        <url-pattern>/manage/PlayersPage</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
